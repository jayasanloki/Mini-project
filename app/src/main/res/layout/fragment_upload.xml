<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lokeshkumar.splash.UploadFragment"
    android:background="@color/colorPrimary">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/upload"
        android:id="@+id/imageView2"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="77dp"
        android:layout_height="90dp"
        android:src="@drawable/gal"
        android:layout_marginTop="54dp"
        android:id="@+id/gal"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/video"
        android:layout_alignStart="@+id/video" />
    <ImageButton
        android:layout_width="77dp"
        android:layout_height="90dp"
        android:src="@drawable/audio"
        android:id="@+id/audio"
        android:layout_alignTop="@+id/gal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <ImageButton
        android:id="@+id/pdf"
        android:layout_width="77dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/pdf_up"

        android:layout_above="@+id/word"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />



    <ImageButton
        android:layout_width="77dp"
        android:layout_height="90dp"
        android:src="@drawable/text"
        android:id="@+id/textbutt"
        android:layout_alignTop="@+id/video"
        android:layout_alignLeft="@+id/audio"
        android:layout_alignStart="@+id/audio" />
    <ImageButton
        android:layout_width="77dp"
        android:layout_height="90dp"
        android:src="@drawable/video"
        android:id="@+id/video"
        android:layout_alignTop="@+id/word"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="77dp"
        android:layout_height="90dp"
        android:src="@drawable/word"
        android:id="@+id/word"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/gal"
        android:layout_alignLeft="@+id/pdf"
        android:layout_alignStart="@+id/pdf" />

</RelativeLayout>
